.level
  block()
  align-items: center
  justify-content: space-between
  code
    border-radius: $radius
  img
    display: inline-block
    vertical-align: top
  &.is-mobile
    display: flex
    .level-left,
    .level-right
      display: flex
    .level-left + .level-right
      margin-top: 0
    .level-item
      &:not(:last-child)
        margin-bottom: 0
      &:not(.is-narrow)
        flex-grow: 1
  +tablet()
    display: flex
    & > .level-item
      &:not(.is-narrow)
        flex-grow: 1

.level-item
  align-items: center
  display: flex
  flex-basis: auto
  flex-grow: 0
  flex-shrink: 0
  justify-content: center
  .title,
  .subtitle
    margin-bottom: 0
  +mobile()
    &:not(:last-child)
      margin-bottom: 0.75rem

.level-left,
.level-right
  flex-basis: auto
  flex-grow: 0
  flex-shrink: 0
  .level-item
    &:not(:last-child)
      margin-right: 0.75rem
    &.is-flexible
      flex-grow: 1

.level-left
  align-items: center
  justify-content: flex-start
  +mobile()
    & + .level-right
      margin-top: 1.5rem
  +tablet()
    display: flex

.level-right
  align-items: center
  justify-content: flex-end
  +tablet()
    display: flex
